@model ChessAndQuests.Models.PlayerDetails

@{
    Layout = "_Layout";
    ViewData["BodyClass"] = "signup-page";
    ViewData["Title"] = "Create Account";
}

<div class="signin-wrapper">
    <div class="signin-card card">
        <div class="card-body p-4">

            <h1 class="signin-title text-center mb-3">Create Account</h1>

            <p class="signin-text text-center mb-4">
                Skapa ett konto för att börja spela Chess & Quests.
            </p>

            <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

            <form asp-action="SignUp" method="post">

                <div class="mb-3">
                    <label asp-for="PlayerUserName" class="form-label">Username</label>
                    <input asp-for="PlayerUserName" class="form-control" />
                    <span asp-validation-for="PlayerUserName" class="text-danger"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="PlayerPassword" class="form-label">Password</label>
                    <input asp-for="PlayerPassword" type="password" class="form-control" />
                    <span asp-validation-for="PlayerPassword" class="text-danger">
                        @ViewBag.errorSignUp
                    </span>
                </div>

                <button type="submit" class="signin-btn">
                    Create Account
                </button>
            </form>

            <div class="text-center mt-3">
                <a asp-action="Signin" class="small">
                    Har du redan ett konto? Logga in här.
                </a>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
