@{
    Layout = "_Layout";
    ViewData["BodyClass"] = "join-game-page";   // för bakgrundsbilden
    ViewData["Title"] = "Join Game";
}

<div class="create-game-wrapper">
    <div class="create-game-card card">
        <div class="card-body p-4">

            <h1 class="create-game-title text-center mb-3">Join Game</h1>

            <p class="create-game-text text-center mb-4">
                Skriv in game key du fått av den som skapade spelet för att gå med som svart spelare.
            </p>

            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger py-2 small">
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <div>@error.ErrorMessage</div>
                    }
                </div>
            }

            <form asp-action="JoinGame" method="post">
                <div class="mb-3">
                    <label for="gamekey" class="form-label">Game key</label>
                    <input type="text"
                           name="gamekey"
                           id="gamekey"
                           class="form-control form-control-lg"
                           placeholder="t.ex. ABC123" />
                </div>

                <div class="mb-4">
                    <label for="playerId" class="form-label">Your player id</label>
                    <input type="number"
                           name="playerId"
                           id="playerId"
                           class="form-control"
                           placeholder="Skriv ditt playerId" />
                </div>

                <div class="d-flex justify-content-center">
                    <button type="submit" class="create-btn">
                        Join Game
                    </button>
                </div>
            </form>

        </div>
    </div>
</div>

