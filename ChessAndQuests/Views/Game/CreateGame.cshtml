@model ChessAndQuests.Models.GameDetails
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor Accessor

@{
    Layout = "_Layout";
    ViewData["BodyClass"] = "create-game-page";
    ViewData["Title"] = "Create Game";
}

<div class="create-game-wrapper">
    <div class="create-game-card card">
        <div class="card-body p-4">

            <h1 class="create-game-title text-center mb-3">Create Game</h1>

            <p class="create-game-text text-center mb-4">
                Skapa ett nytt äventyr. Dela game key med din vän så kan de joina som svart spelare.
            </p>

            @if (ViewBag.ErrorGame != null)
            {
                <div class="alert alert-danger py-2 small">
                    @ViewBag.ErrorGame
                </div>
            }

            <form asp-action="CreateGame" method="post">
                <input type="hidden" name="playerId" value="@Accessor.HttpContext.Session.GetInt32("PlayerId")" />
                <div class="mb-3">
                    <label asp-for="GameKey" class="form-label">Game key</label>
                    <input asp-for ="GameKey" type="text"
                           id="gamekey"
                           name="gamekey"
                           class="form-control form-control-lg"
                           placeholder="t.ex. QUEST-1234" />
                    <span asp-validation-for ="GameKey"> </span>
                </div>

                <div class="d-flex justify-content-center">
                    <button type="submit" class="create-btn">
                        Create Game
                    </button>
                </div>
            </form>

        </div>
    </div>
</div>

